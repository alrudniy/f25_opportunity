{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: runserver",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "127.0.0.1:8000"],
      "django": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Django: manage.py test (debug)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test", "-v", "2"],
      "django": true,
      "env": { "DJANGO_ENV": "test" },   // settings.py uses this to switch DB in tests
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
